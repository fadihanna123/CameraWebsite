  "scripts": {
    "setup": "yarn --ignore-scripts --silent --emoji --immutable",
    "start": "node ./build/server.js",
    "dev": "ts-node-dev --poll -r tsconfig-paths/register ./src/server",
    "seed": "prisma db push && prisma db pull && prisma generate",
    "seed-delete": "prisma migrate reset",
    "lint": "eslint ./ && tsc --noEmit",
    "format": "prettier -w ./",
    "prebuild": "rimraf build",
    "build": "esbuild ./src/server.ts --bundle --platform=node --outdir=build --minify --sourcemap --packages=external",
    "clear": "rimraf ./node_modules ./build"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/eslint": "9.6.1",
    "@types/express": "4.17.21",
    "@types/express-fileupload": "1.5.1",
    "@types/jsonwebtoken": "9.0.9",
    "@types/luxon": "3.4.2",
    "@types/node-cron": "3.0.11",
    "@types/validator": "13.12.2",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-prettier": "5.2.3",
    "express-rate-limit": "7.5.0",
    "node-cron": "3.0.3",
    "prettier": "3.5.3",
    "prisma": "6.4.1",
    "rimraf": "6.0.1",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@prisma/client": "6.4.1",
    "apidoc": "1.2.0",
    "express": "4.21.2",
    "express-fileupload": "1.5.1",
    "helmet": "8.0.0",
    "jsonwebtoken": "9.0.2",
    "luxon": "3.5.0",
    "validator": "13.12.0",
    "winston": "3.17.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": "Please use Yarn instead of NPM to install dependencies"
  },
  "config": {
    "port": 5000
  }
